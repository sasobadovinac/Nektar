<NEKTAR>

  <GLOBALSOLVE>
    <XxtConfig Name="UWConfig" >
      <Type> MultiLevelStaticCond </Type>
    </XxtConfig>
    
    <XxtConfig Name="VConfig" >
      <Type> StaticCond </Type> <!-- can be Full, MultiLevel, StaticCond -->
    </XxtConfig>
    
    <IterativeConfig Name="PConfig" >
      <Type> StaticCond </Type>
      <Method> ConjugateGradient </Method>
      <Precon>  LowEnergyBlocK </Precon>
      <AbsTol>  1e-8 </AbsTol>
      <MaxIter> 5000 </MaxIter> 
    </IterativeConfig>
    
    <!-- IncNS direct setup --> 
    <VeclocitySolve>
      <ScalarSolve Var="u,w"> UWConfig </ScalarSolve>
      <ScalarSolve Var="v">   VConfig  </ScalarSolve>
    </VeclocitySolve>
    
    <PressureSolve>
      <ScalarSolve Var="p"> PConfig  </ScalarSolve>
    </PressureSolve>
    
  </GLOBALSOLVE>


  <!--- Implicit CFS solver !-->

  <!--- JFNK for global solve !-->
  <GLOBALSOLVE>
    <CFSImplicitSolve>
      <VectorSolve Var="rho,rhou,rhov,rhow,rhoE">
        JFNKConfig
      </VectorSolve>
    </CFSImplicitSolve>
  
    <!--- Newton solver !-->
    <NewtonConfig Name="JFNKConfig">
      <SolverType> Newton </SolverType>
      <JacEval>    JacFree  </JacEval>
      <LinSolver>  GMRes    </LinSolver>
      <AbsTol>     1e-6     </AbsTol>
    </NewtonConfig>
    
    <!--- GMRes for linear solve !-->
    <GMResConfig Name="GMRes">
      <Precon>  BlockDiagConfig </Precon>
      <AbsTol>  1e-6  </AbsTol>
      <MaxIter> 5000 </MaxIter> 
    </GMResConfig>

    <!--- Block Diagonal Preconditioner !-->
    <PreconConfig Name="BlockDiagConfig" > 
      <Type> BlockJacobi </Type>
      <NumIter> 3  </NumIter>
    </PreconConfig>
  </GLOBALSOLVE>>
    
</NEKTAR>
