<?xml version="1.0" encoding="UTF-8"?>
<NEKTAR>
    <GEOMETRY DIM="1" SPACE="1">
        <VERTEX>
            <V ID="0">  0.0  0.0  0.0</V>
            <V ID="1">  0.2  0.0  0.0</V>
            <V ID="2">  0.4  0.0  0.0</V>
            <V ID="3">  0.6  0.0  0.0</V>
            <V ID="4">  0.8  0.0  0.0</V>
            <V ID="5">  1.0  0.0  0.0</V>
        </VERTEX> 
        
        <ELEMENT>
            <S ID="0">    0     1 </S>
            <S ID="1">    1     2 </S>
            <S ID="2">    2     3 </S>
            <S ID="3">    3     4 </S>
            <S ID="4">    4     5 </S>
        </ELEMENT>
        
        <COMPOSITE>
            <C ID="0"> S[0-4] </C>
            <C ID="1"> V[0]   </C>
            <C ID="2"> V[5]   </C>
        </COMPOSITE>
        
        <DOMAIN> C[0] </DOMAIN>
    </GEOMETRY>
    
    <EXPANSIONS>
        <E COMPOSITE="C[0]" FIELDS="u" TYPE="GLL_LAGRANGE_SEM" NUMMODES="6"/>
    </EXPANSIONS>
    
    <CONDITIONS>
    
        <PARAMETERS>
            <P> TimeStep        = 0.01               </P>
            <P> FinTime         = 10.0               </P>
            <P> NumSteps        = FinTime / TimeStep </P>
            <P> IO_CheckSteps   = NumSteps + 10      </P>
            <P> IO_InfoSteps    = NumSteps + 10      </P>
            <P> Interest        = 1.05               </P>
            <P> Volatility      = 0.1                </P>
        </PARAMETERS>
        
        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                VALUE="BlackScholes"    />
            <I PROPERTY="Projection"            VALUE="Continuous"      />
            <I PROPERTY="AdvectionType"         VALUE="NonConservative" />
            <I PROPERTY="AdvectionAdvancement"  VALUE="Explicit"        />
            <I PROPERTY="DiffusionAdvancement"  VALUE="Implicit"        />
            <I PROPERTY="TimeIntegrationMethod" VALUE="IMEXOrder1"      />
        </SOLVERINFO>

        <VARIABLES>
            <V ID="0"> u </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1] </B>
            <B ID="1"> C[2] </B>
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <D VAR="u" VALUE="sin(PI * x)"/>
            </REGION>
            <REGION REF="1">
                <D VAR="u" VALUE="sin(PI * x)"/>
            </REGION>
        </BOUNDARYCONDITIONS>

        <FUNCTION NAME="InitialConditions">
            <E VAR="u" VALUE="sin(PI * x)"/>
        </FUNCTION>

        <FUNCTION NAME="ExactSolution">
            <E VAR="u" VALUE="sin(PI * x)"/>
        </FUNCTION>

        <FUNCTION NAME="ExactForce">
            <E VAR="u"
             VALUE="-Interest * x * PI*cos(PI*x) +
                    (0.5 * Volatility * Volatility * x *x * PI * PI
                    + Interest) * sin(PI * x)" />
        </FUNCTION>

    </CONDITIONS>

    <FORCING>
        <FORCE TYPE="Body">
            <BODYFORCE> ExactForce </BODYFORCE>
        </FORCE>
    </FORCING>

</NEKTAR>
