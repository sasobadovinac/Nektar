<?xml version="1.0" encoding="utf-8"?>

<NEKTAR xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.nektar.info/schema/nektar.xsd">

    <GEOMETRY DIM="2" SPACE="2">

        <VERTEX>
            <V ID="0"> -1.0   -1.0    0.0 </V>
            <!-- <V ID="1">  0.0   -1.0    0.0 </V> -->
            <V ID="2">  1.0   -1.0    0.0 </V>

	    <!-- <V ID="3"> -1.0    0.0    0.0 </V> -->
	    
            <!-- <V ID="4">  0.0    0.0    0.0 </V> -->
            <!-- <V ID="5">  1.0    0.0    0.0 </V> -->
            <V ID="6"> -1.0    1.0    0.0 </V>
            <!-- <V ID="7">  0.0    1.0    0.0 </V> -->
            <V ID="8">  1.0    1.0    0.0 </V>
        </VERTEX>

        <EDGE>
            <E ID="0">  0 2  </E>
            <E ID="1">  0 3  </E>
            <E ID="2">  2 8  </E>
            <E ID="3">  6 8  </E>
        </EDGE>

        <ELEMENT>
            <Q ID="0"> 0   1   2   3  </Q>
            <!-- <Q ID="1"> 1   4   6   3  </Q> -->
            <!-- <Q ID="2"> 5   8   10  7  </Q> -->
            <!-- <Q ID="3"> 6   9   11  8  </Q> -->
        </ELEMENT>

        <COMPOSITE>
            <C ID="0"> Q[0]       </C>
            <C ID="1"> E[0-3]       </C>
        </COMPOSITE>

        <DOMAIN> C[0] </DOMAIN>

    </GEOMETRY>

    <EXPANSIONS>
        <E COMPOSITE="C[0]" NUMMODES="7" FIELDS="u" TYPE="MODIFIED" />
    </EXPANSIONS>

    <CONDITIONS>

        <PARAMETERS>
            <P> FinTime         = 0              </P>
            <P> TimeStep        = 0.004             </P>
            <P> NumSteps        = FinTime/TimeStep  </P>
            <P> IO_CheckSteps   = 1            </P>
            <P> IO_InfoSteps    = 100000            </P>
            <P> advx            = 1.1                 </P>
            <P> advy            = 1.1                 </P>
        </PARAMETERS>

        <SOLVERINFO>
            <I PROPERTY="EQTYPE"                VALUE="UnsteadyAdvection"   />
            <I PROPERTY="Projection"            VALUE="DisContinuous"       />
            <I PROPERTY="AdvectionType"         VALUE="WeakDG"                />
            <I PROPERTY="UpwindType"            VALUE="Upwind"              />
            <I PROPERTY="TimeIntegrationMethod" VALUE="ClassicalRungeKutta4"/>
        </SOLVERINFO>

        <VARIABLES>
            <V ID="0"> u </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1] </B>
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <D VAR="u" VALUE="0" />
            </REGION>
       </BOUNDARYCONDITIONS>

        <FUNCTION NAME="AdvectionVelocity">
            <E VAR="Vx" VALUE="0" />
            <E VAR="Vy" VALUE="0" />
        </FUNCTION>

        <FUNCTION NAME="InitialConditions">
            <E VAR="u" VALUE="floor(0.5*(floor(0.5*(x >= -0.8) + 0.5*(x&lt;=0.2))) +  0.5*(floor(0.5*( y>=-0.2) + 0.5*(y&lt;=0.8)))))*cos(0.2*PI-PI*(x))*sin(PI*(y)+0.2*PI)" />
        </FUNCTION>
        
        <FUNCTION NAME="ExactSolution">
            <E VAR="u" VALUE="floor(0.5*(floor(0.5*(x >= -0.8) + 0.5*(x&lt;=0.2))) +  0.5*(floor(0.5*( y>=-0.2) + 0.5*(y&lt;=0.8)))))*cos(0.2*PI-PI*(x))*sin(PI*(y)+0.2*PI)" />
        </FUNCTION>

    </CONDITIONS>

</NEKTAR>

