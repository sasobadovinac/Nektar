<?xml version="1.0" encoding="utf-8"?>

<NEKTAR xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.nektar.info/nektar.xsd">

    <GEOMETRY DIM="2" SPACE="2">

        <VERTEX>
            <V ID="0"> 0.0 0.0 0.0 </V>
            <V ID="1"> 1.0 0.0 0.0 </V>
            <V ID="2"> 3.0 0.0 0.0 </V>
            <V ID="3"> 0.0 1.0 0.0 </V>
            <V ID="4"> 2.0 1.0 0.0 </V>
            <V ID="5"> 3.0 1.0 0.0 </V>
            <V ID="6"> 0.0 2.0 0.0 </V>
            <V ID="7"> 1.0 2.0 0.0 </V>
            <V ID="8"> 3.0 2.0 0.0 </V>
            <V ID="9"> 0.0 3.0 0.0 </V>
            <V ID="10"> 2.0 3.0 0.0 </V>
            <V ID="11"> 3.0 3.0 0.0 </V>
        </VERTEX>

        <EDGE>
            <E ID="0"> 0 1 </E>
            <E ID="1"> 1 2 </E>
            <E ID="2"> 0 3 </E>
            <E ID="3"> 1 4 </E>
            <E ID="4"> 2 5 </E>
            <E ID="5"> 3 4 </E>
            <E ID="6"> 4 5 </E>
            <E ID="7"> 3 6 </E>
            <E ID="8"> 4 7 </E>
            <E ID="9"> 5 8 </E>
            <E ID="10"> 6 7 </E>
            <E ID="11"> 7 8 </E>
            <E ID="12"> 6 9 </E>
            <E ID="13"> 7 10 </E>
            <E ID="14"> 8 11 </E>
            <E ID="15"> 9 10 </E>
            <E ID="16"> 10 11 </E>
            
        </EDGE>

        <ELEMENT>
            <Q ID="0"> 0 3 5 2 </Q>
            <Q ID="1"> 1 4 6 3 </Q>
            <Q ID="2"> 5 8 10 7 </Q>
            <Q ID="3"> 6 9 11 8 </Q>
            <Q ID="4"> 10 13 15 12 </Q>
            <Q ID="5"> 11 14 16 13 </Q>
        </ELEMENT>

        <COMPOSITE>
            <C ID="0"> Q[0-5] </C>
            <C ID="1"> E[0-1] </C>
            <C ID="2"> E[4,9,14] </C>
            <C ID="3"> E[15-16] </C>
            <C ID="4"> E[2,7,12] </C>
        </COMPOSITE>

        <DOMAIN> C[0] </DOMAIN>
    </GEOMETRY>

    <EXPANSIONS>
        <E COMPOSITE="C[0]" NUMMODES="7" FIELDS="u" TYPE="MODIFIED" />
    </EXPANSIONS>


    <CONDITIONS>

      <SOLVERINFO>
        <I PROPERTY="GlobalSysSoln" VALUE="IterativeFull" />
        <I PROPERTY="MaxIterations" VALUE="10000"/>
      </SOLVERINFO> 

      <PARAMETERS>
            <P> Lambda    = 1 </P>
            <P> a         = 1.41421356   </P>
            <P> b         = 0.5  </P>
            <P> d00       = 1.0*a*a </P>
            <P> d11       = 1.0*b*b </P>
            <P> d01       = 0.0*a*b </P>
        </PARAMETERS>
        
        <VARIABLES>
            <V ID="0"> u </V>
        </VARIABLES>

        <BOUNDARYREGIONS>
            <B ID="0"> C[1-4] </B>
        </BOUNDARYREGIONS>

        <BOUNDARYCONDITIONS>
            <REGION REF="0">
                <D VAR="u" VALUE="sin(PI*x/a)*sin(PI*y/b)" />
            </REGION>
        </BOUNDARYCONDITIONS>

        <FUNCTION NAME="Forcing">
            <E VAR="u" VALUE="-(Lambda + PI*PI*((d00/(a*a))+(d11/(b*b))))*sin(PI*x/a)*sin(PI*y/b) + 2*PI*PI*(d01/(a*b))*cos(PI*x/a)*cos(PI*y/b)" />
        </FUNCTION>

        <FUNCTION NAME="ExactSolution">
            <E VAR="u" VALUE="sin(PI*x/a)*sin(PI*y/b)" />
        </FUNCTION>

    </CONDITIONS>


</NEKTAR>

